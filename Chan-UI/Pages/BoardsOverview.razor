@page "/allboards"
@using System.Net
@inherits Infrastructure.Bases.BoardsOverviewBase

<h1 class="page-title">All Boards</h1>

@if (FullBoard == null)
{
    <p><em>Loading...</em></p>
}
else if (FullBoard.Threads == null)
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Board</th>
                <th>Description</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var board in FullBoard.Boards.boards)
            {
            <tr>
                <td><button type="button" @onclick="@(async ()=>await GetThreads(board.board).ConfigureAwait(false))">Download All</button></td>
                <td><button type="button" @onclick="@(async ()=>await GetThreads(board.board).ConfigureAwait(false))">Expand</button></td>
                <td>@board.board</td>
                <td>@WebUtility.HtmlDecode(board.meta_description)</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Thread Id</th>
            <th>Description</th>

        </tr>
        </thead>
        <tbody>
            @foreach (var page in FullBoard.Threads)
            {
                foreach (var thread in page.threads)
                {
            <tr>
                <td>@thread.tim</td>
                <td>@thread.sub</td>
                <td>@thread.com</td>
            </tr>
                }

            }
        </tbody>
    </table>
}